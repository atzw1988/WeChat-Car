/* pages/mycar/mycar.wxss */
.header {
  /* position: relative; */
  width: 340px;
  height: 100px;
  font-size: 12px;
  color: #222;
  text-align: center;
  /* line-height: 140px; */
  border: 1px solid #fff;
  border-radius: 10px;
  margin: 10px auto;
  background-color: #fff;
  box-shadow: 2px 2px 2px #f1f1f1;
}
.header>text {
  display: block;
}
.addcar {
  width: 30px;
  height: 30px;
  margin: 20px auto 0;
}
.mycard {
  width: 340px;
  height: 160px;
  background-color: #1296db;
  margin: 10px auto;
  border-radius: 10px;
  box-shadow: 2px 2px 2px #f1f1f1;
  color: #fff;
  position: relative;
}
.card_header{
  height: 30px;
  width: 100%;
  line-height: 30px;
}
.card_header>text{
  font-size: 14px;
}
.car_icon{
  height: 30px;
  width: 30px;
  float: left;
  margin-left: 10px;
}
.card_kind{
  font-size: 30px;
  height: 40px;
  width: 100%;
  text-align: center;
  line-height: 40px;
  margin-top: 20px;
  font-weight: 600;
}
.park_name,
.end_time{
  font-size: 12px;
  display: block;
  margin-left: 50%;
}
.more_pay{
  font-size: 14px;
  display: block;
  float: right;
  margin-top: 5px;
  margin-right: 10px;
  color: #d81e06;
}
.overdue{
  width: 97px;
  height: 60px;
  position: absolute;
  top: 10px;
  right: 10px;
}
