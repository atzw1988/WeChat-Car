/* pages/mywallet/mywallet.wxss */
.moneynumber{
    margin-left: 15px;
}
text{
  font-size: 12px;
  color: gray;
  display: block;
}
.main{
    margin: 0 auto;
    width: 360px;
    /* border: 1px solid black; */
}
.itemBox{
  flex-flow: wrap;
  margin:0 auto;
}
.itemBox view{
  width: 110px;
  height: 70px;
  display: block;
  margin: 4px;
  border-radius: 4px;
  background: white;
  border: 1px solid #5cbcfe;
  color: gray;
  font-size: 15px;
  text-align: center;
  line-height: 70px;
}
.itemBox view>div{
  width: 100%;
  height: 100%;
  margin:5px;
}
.itemBox view.active{
  background: linear-gradient(to right, #5cbcfe , #9cd7ff);
  border: 1px solid #5cbcfe;
  color: #fff;
  box-shadow: 2px 2px 2px #91d3ff;
}
.thisbtn{
    width: 300px;
    height: 45px;
    margin: 20px auto;
    background: linear-gradient(to right, #5cbcfe , #9cd7ff);
    text-align: center;
    line-height: 45px;
    border-radius: 5px;
    font-size: 16px;
    color: #fff;
    font-weight: 500;
    box-shadow: 2px 2px 2px #44b0f8;
}
.account{
    width: 345px;
    height: 120px;
    margin: 20px auto;    
    border: 1px solid #fff;
    border-radius: 5px;
    box-shadow: 3px 3px 3px #91d3ff;
    background: linear-gradient(to bottom right,#0c8de2,#9cd7ff) ;
}
.account text{
    color: #fff;
}
.myaccount{
    font-size: 20px;
    margin-top: 20px;
    margin-left: 15px;
}
.mymoney{
    display: inline-block;
    /* float: left; */
    font-size: 13px;
    font-weight: 500;
    margin-top: 20px;
    margin-left: 15px;
}
.money{
    display: inline-block;
    font-size: 20px;
    /* float: left; */
    /* margin-left: 20px; */
}
.recharge{
    margin-left: 200px;
    margin-bottom: 25px;
}
.record{
    font-size: 14px;
    text-align: center;
    text-decoration: underline;
    color: #0c8de2;
}
.record1{
    font-size: 14px;
    text-align: center;
    margin-top: 20px;
    text-decoration: underline;
    color: #0c8de2;
}
input{
    border: 1px solid #5cbcfe;
    padding: 5px 20px; 
    border-radius: 5px;
}