/* pages/pdaorder/pdaorder.wxss */
/* 线上订单 */
.content {
  padding-top: 45rpx;
}
.offline {
  width: 90%;
  background: #fff;
  box-shadow: 2px 2px 20px #999;
  font-size: 30rpx;
  position: relative;
  border-radius: 15rpx;
  padding-top: 20rpx;
  float: left;
  margin: 30rpx auto;
  margin-left: 5%;
  height: 250rpx;
}
.start_time,
.end_time,
.pay_time,
.park_name {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 15rpx;
}
.status{
  position: absolute;
  right: 40rpx;
  top: 30%;
  color: #d81e06;
  font-size: 30rpx;
}
.offline_money {
  position: absolute;
  right: 40rpx;
  top: 50%;
  color: #d81e06;
  font-weight: 600;
}
.money {
  font-size: 45rpx;
}
.icon {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.total{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  box-shadow: 2px 2px 2px #999;
}
.total_money{
  float: left;
  margin-left: 5%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #d81e06;
}
.total_money>text{
  font-size: 40rpx;
  font-weight: 600;
}
.pad_pay{
  width: 150rpx;
  height: 70rpx;
  border-radius: 10rpx;
  background: #1296db;
  position: absolute;
  right: 40rpx;
  top: 15rpx;
  color: #fff;
  line-height: 70rpx;
}
